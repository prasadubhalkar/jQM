<div data-role="header" data-theme="b">
    <a href="#myPanel" data-icon="bars" data-iconpos="notext"> Menu </a>
    <h1>{{pageTitle}}</h1>
</div>

<div data-role="content">
    <h3>{{navigationLabel}}</h3>
    <div data-role="collapsible-set" data-inset="true" data-theme="b" data-content-theme="a">
    	{{#each questions}}
    		<div data-role="collapsible" data-collapsed="true">
    			<h3>{{this.title}}</h3>
                {{#each this.answers}}
                    <label>
                        <input type="radio" name="{{../questionId}}" id="{{this.answerId}}">
                        {{this.label}}
                    </label>
                {{/each}}
    		</div>
    	{{/each}}
    </div>
</div>